  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch generate_types",
      "program": "${workspaceFolder}/dist/scripts/generate_types.js",
      "args": [
        "/Users/mgadda/Documents/Projects/3rdparty/HAP-NodeJS/lib/gen/HomeKitTypes.js"
      ],      
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch homebridge",
      "program": "${workspaceFolder}/node_modules/homebridge/bin/homebridge",
      "args": [
        "-P",
        "${workspaceFolder}",
        "-D",
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}