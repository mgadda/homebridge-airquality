{
  "compilerOptions": {
    // "noImplicitAny": true,
    "compileOnSave": true,
    "outDir": "dist",
    "sourceMap": true,
    "pretty": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "removeComments": true,
    "baseUrl": ".",    
    "paths": {
      "*": [
        "./types/*"
      ]
    },
    "lib": [ // dom, esnext, esnext.asynciterable needed only for generate_type.ts
      "dom",
      "esnext",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}